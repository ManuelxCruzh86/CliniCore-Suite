@page "/patients"
@using CliniCore.Client.DTOs
@using Blazored.LocalStorage
@using System.Net.Http.Headers 
@inject HttpClient Http
@inject ILocalStorageService LocalStorage
@inject NavigationManager Navigation

<PageTitle>Patients - CliniCore</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>👥 Listado de Pacientes</h3>
        <button class="btn btn-success"><span class="bi bi-plus-circle"></span> Nuevo Paciente</button>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (patients == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p>Cargando datos del servidor...</p>
        </div>
    }
    else if (!patients.Any())
    {
        <div class="alert alert-warning">No hay pacientes registrados aún.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm p-3 mb-5 bg-body rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nombre Completo</th>
                        <th>Edad</th>
                        <th>Género</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in patients)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td class="fw-bold">@p.FirstName @p.LastName</td>
                            <td>@(DateTime.Now.Year - p.BirthDate.Year) años</td>
                            <td>
                                @if(p.Gender == "Male") { <span class="badge bg-info text-dark">M</span> }
                                else { <span class="badge bg-danger">F</span> }
                            </td>
                            <td>
                                @if (p.IsActive)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i> Ver</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<PatientDto>? patients;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 1. RECUPERAR EL TOKEN DEL LOCALSTORAGE
            var token = await LocalStorage.GetItemAsync<string>("authToken");

            // 2. SI NO HAY TOKEN, SACAR AL USUARIO (Redirigir al Login)
            if (string.IsNullOrEmpty(token))
            {
                Navigation.NavigateTo("/login");
                return;
            }

            // 3. ADJUNTAR EL TOKEN A LA PETICIÓN (Aquí está la clave de seguridad)
            Http.DefaultRequestHeaders.Authorization = new AuthenticationHeaderValue("Bearer", token);

            // 4. PEDIR LOS DATOS A LA API
            patients = await Http.GetFromJsonAsync<List<PatientDto>>("api/Pacientes");
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            // Si el token venció o es falso
            errorMessage = "Su sesión ha expirado. Por favor, ingrese nuevamente.";
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar pacientes: {ex.Message}";
        }
    }
}